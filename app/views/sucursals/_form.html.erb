<%= form_with(model: @sucursal) do |form| %>
  <div>
        <% if @sucursal.errors.any? %>
            <div id="error_explanation">
                <ul>
                    <% @sucursal.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </div>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :direccion %>
    <%= form.text_field :direccion %>
  </div>

  <div>
    <%= form.label :telefono %>
    <%= form.text_field :telefono %>
  </div>
    <div>
        <%= form.label :lunes %>
        <%= form.time_field :inicio_lunes %>
        <%= form.time_field :fin_lunes %>
    </div>
    <div>
        <%= form.label :martes %>
        <%= form.time_field :inicio_martes %>
        <%= form.time_field :fin_martes %>
    </div>
    <div>
        <%= form.label :miercoles %>
        <%= form.time_field :inicio_miercoles %>
        <%= form.time_field :fin_miercoles %>
    </div>
    <div>
        <%= form.label :jueves %>
        <%= form.time_field :inicio_jueves %>
        <%= form.time_field :fin_jueves %>
    </div>
    <div>
        <%= form.label :viernes %>
        <%= form.time_field :inicio_viernes %>
        <%= form.time_field :fin_viernes %>
    </div>

  <div>
    <%= form.submit value="Aceptar"%>
    <%= link_to "<button>Volver</button>".html_safe, sucursals_path %>
  </div>
<% end %>
