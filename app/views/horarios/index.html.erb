 <h1> <%= t('.title')%> </h1>
  <table >
    <thead>
      <tr>
            <th>Hora de apertura</th>
            <th>Hora de cierre</th>
            <th>Dia</th>
      </tr>
    </thead>
    <tbody>
      <% @sucursals.each_with_index do |sucursal,index| %>     
        <tr>
            <td><%= sucursal.horarios[index].inicio.strftime("%H:%M") if sucursal.horarios[index] %></td>
            <td><%= sucursal.horarios[index].fin.strftime("%H:%M") if sucursal.horarios[index]%></td>
            <td><%= sucursal.sucursal_horario[index].dia if sucursal.sucursal_horario[index]%></td>
        </tr>
      <% end %>
    </tbody>
  </table>